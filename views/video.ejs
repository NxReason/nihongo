<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('partials/head', {title: 'Nihongo Video Player'})%>
  <link rel="stylesheet" href="/css/video-player.css">
</head>
<body>
  <%- include ('partials/header', {title: 'Video Player', activeClass : 'video-player' })%>
  <main>
    <div class="video-player-container">
      <sectoin class="player-section">
        <video src="/vid/test.mkv" class="video" controls>
          Your browser does not support the video tag
        </video>
      </sectoin>
      <section class="subs-section">
        <div class="subs-controls">
          <i class="icon icon-upload" id="uploads-btn"></i>
          <i class="icon icon-settings active" id="settings-btn"></i>
          <i class="icon icon-layout" id="layout-btn"></i>
        </div>
        <div class="subs-menu" id="subs-menu">
          <div class="subs-menu-common">
            <span class="icon-box icon-hide-box">
              <i class="icon icon-hide" id="hide-subs-menu-btn"></i>
              <span class="icon-subtext">hide</span>
            </span>
          </div>
          <div class="subs-menu-tab-container">
            <!--UPLOAD-->
            <div class="subs-menu-tab subs-menu-upload-tab" id="uploads-tab">
              <span class="file-input-wrapper">
                <input type="file" class="file-input" id="video-upload-input">
                <label for="video-upload-input">
                  <i class="icon icon-video-upload"></i>
                  Video
                </label>
              </span>
              <span class="file-input-wrapper">
                <input type="file" class="file-input" id="subs-upload-input">
                <label for="subs-upload-input">
                  <i class="icon icon-subs-upload"></i>
                  Subs
                </label>
              </span>
            </div>
            <!--SETTINGS-->
            <div class="subs-menu-tab subs-menu-settings-tab active" id="settings-tab">
              <form id="subs-settings-form">
                <div class="form-area">
                  <label for="desync-input">
                    <i class="icon icon-desync"></i>
                    Desync
                  </label>
                  <input type="text" id="desync-input" class="desync-input" placeholder="0">
                </div>
              </form>
            </div>
            <!--LAYOUT-->
            <div class="subs-menu-tab subs-menu-layout-tab" id="layout-tab">
              <p>Soon...</p>
            </div>
          </div>
        </div>

        <div class="subs-content"></div>
      </section>
    </div>
  </main>

  <script src="/js/video-player.js"></script>
</body>
</html>
